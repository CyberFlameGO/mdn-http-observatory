{
  "name": "mdn-http-observatory",
  "description": "Checking http-level security and grading a site",
  "version": "0.0.1",
  "homepage": "http://chrome.google.com/webstore",
  "author": "ENTER YOUR NAME HERE",
  "repository": {
    "type": "git",
    "url": "ENTER GIT REPO URL"
  },
  "type": "module",
  "scripts": {
    "start": "xt-build -e dev -w",
    "start:firefox": "xt-build -e dev -p firefox -w",
    "build": "node bundle.js",
    "package": "xt-build -e dev"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintIgnore": [
    "test/**/*"
  ],
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "esbuild": "0.23.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "extension-cli": "latest"
  },
  "xtdocs": {
    "source": {
      "include": [
        "README.md",
        "src"
      ]
    }
  },
  "xtbuild": {
    "js_bundles": [
      {
        "name": "background",
        "src": "./src/background.js"
      },
      {
        "name": "browser-polyfill",
        "src": "./src/browser-polyfill.js"
      },
      {
        "name": "popup",
        "src": "./src/popup.js"
      }
    ],
    "assets": [
      "./assets/**/*"
    ],
    "locales_dir": "./_locales/",
    "locales_list": [
      "en"
    ]
  },
  "dependencies": {
    "@mdn/mdn-http-observatory": "file:..",
    "deasync": "^0.1.30"
  }
}
